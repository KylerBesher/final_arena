{
    "name": "next-netlify-platform-starter",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "npm run build:cms-components && next build",
        "start": "next start",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "check-format": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "validate": "npm run lint && npm run check-format",
        "build:cms": "node scripts/build.js",
        "watch:cms": "nodemon --watch cms --ext js --exec 'npm run build:cms'",
        "watch:cms-components": "nodemon --watch components --ext jsx --exec 'npm run build:cms-components'",
        "build:cms-components": "node scripts/build-cms-components.js",
        "build:css": "node scripts/generateTailwindSafelist.js && npx tailwindcss -i ./styles/globals.css -o ./public/styles/globals.css --minify",
        "watch:css": "nodemon --watch styles --watch content --ext css,md,mdx,json --exec 'npm run build:css'",
        "watch:all": "concurrently \"npm run watch:cms\" \"npm run watch:cms-components\" \"npm run watch:css\"",
        "dev:debug": "cross-env NODE_OPTIONS='--inspect' netlify dev",
        "build:debug": "netlify build --debug",
        "start:debug": "NODE_OPTIONS='--inspect' next start",
        "lint:debug": "next lint --debug",
        "format:debug": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\" --debug-check",
        "lint:list-files": "next lint --print-config ./pages/index.js"
    },
    "dependencies": {
        "@apollo/client": "^3.12.4",
        "@heroicons/react": "^2.2.0",
        "@netlify/blobs": "^8.1.0",
        "@portabletext/react": "^3.2.0",
        "@shopify/shopify-api": "^11.6.1",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "ajv": "^8.12.0",
        "ajv-keywords": "^5.1.0",
        "apollo-server-micro": "^3.13.0",
        "blobshape": "^1.0.0",
        "bright": "^0.8.5",
        "decap-cms-app": "^3.6.0",
        "decap-cms-core": "^3.6.0",
        "glob": "^11.0.1",
        "graphql": "^16.10.0",
        "graphql-request": "^7.1.2",
        "gray-matter": "^4.0.3",
        "immutable": "^4.3.5",
        "js-yaml": "^4.1.0",
        "markdown-to-jsx": "^7.4.5",
        "next": "15.1.3",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "slate-hyperscript": "^0.100.0",
        "unique-names-generator": "^4.7.1",
        "webpack": "^5.97.1"
    },
    "devDependencies": {
        "@babel/core": "^7.26.7",
        "@babel/preset-env": "^7.26.7",
        "@babel/preset-react": "^7.26.3",
        "@tailwindcss/typography": "^0.5.16",
        "@types/node": "^22.12.0",
        "@typescript-eslint/eslint-plugin": "^8.23.0",
        "@typescript-eslint/parser": "^8.23.0",
        "autoprefixer": "^10.4.20",
        "babel-loader": "^9.2.1",
        "chokidar": "^3.6.0",
        "concurrently": "^9.1.2",
        "daisyui": "^4.12.8",
        "eslint": "^8.57.1",
        "eslint-config-next": "^15.1.3",
        "eslint-config-prettier": "^9.1.0",
        "frontmatter-markdown-loader": "^3.7.0",
        "nodemon": "^3.1.9",
        "postcss": "^8.5.1",
        "prettier": "^3.4.2",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.7.3"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    }
}
